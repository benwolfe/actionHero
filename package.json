{
  "author": "Evan Tahler <evantahler@gmail.com>",
  "name": "actionHero",
  "description": "actionHero is a node.js API framework for both tcp sockets, web sockets, and http clients.  The goal of actionHero are to create an easy-to-use toolkit for making reusable & scalable APIs",
  "version": "3.0.6",
  "homepage": "http://actionherojs.com",
  "repository": {
    "type": "git",
    "url": "git://github.com/evantahler/actionHero.git"
  },
  "main": "api",
  "keywords": ["socket", "http", "https", "web sockets", "game", "cluster", "soa", "action", "task", "delay", "service", "api", "tcp"],
  "engines": {
    "node": ">=0.6.0"
  },
  "dependencies": {
    "async":"0.x.x", 
    "request":"2.x.x",
    "validator":"0.x.x",
    "formidable":"1.x.x",
    "colors":"0.x.x",
    "data2xml":"x",
    "mime":"1.x.x",
    "redis":"x",
    "socket.io":"0.9.x"
	},
  "devDependencies": {
    "vows":"0.x.x"
  },
  "scripts": {
    "start": "./scripts/actionHero",
	  "install": "./scripts/install",
	  "test": "./node_modules/.bin/vows spec/* -v --dot-matrix",
    "generate" : "./scripts/generate",
    "generateAction" : "./scripts/generateAction",
    "generateTask" : "./scripts/generateTask"
  }
}
